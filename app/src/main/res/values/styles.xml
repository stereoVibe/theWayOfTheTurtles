<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/light_bg_white</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->

    </style>

    <style name="SubGoalsDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
    </style>

    <style name="raisedButton" parent="Theme.AppCompat.Light">

        <item name="colorControlHighlight">@color/light_bg_white</item>
        <item name="colorButtonNormal">@color/redParrot</item>
        <item name="android:textColor">@color/light_bg_white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="datePickerButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">0dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="TitleSubGoalsStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/nearBlack</item>
    </style>

    <style name="DetailsOfTheBigGoal">
        <item name="android:textColor">@color/nearBlack</item>
    </style>
    
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
